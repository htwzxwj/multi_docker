# Dockerfile.ubuntu
FROM ubuntu:latest

# 安装 Python 及其依赖项
RUN apt-get update && apt-get install -y python3 python3-pip

# 安装 Flask
RUN pip3 install flask --break-system-packages

# 复制 Python 函数代码到容器
COPY container_function.py /app/container_function.py

# 设置工作目录
WORKDIR /app

# 暴露 Flask 的端口
EXPOSE 5000

# 启动 Flask 服务
CMD ["python3", "container_function.py"]
